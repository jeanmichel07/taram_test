{% extends 'app.html.twig' %}

{% block title %}Provider index{% endblock %}

{% block body %}
    <h1>Fournisseurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td>{{ provider.name }}</td>
                <td>{{ provider.address }}</td>
                <td>{{ provider.phone }}</td>
                <td>{{ provider.email }}</td>
                <td>
                    <a href="{{ path('app_provider_show', {'id': provider.id}) }}">Voir</a>
                    <a href="{{ path('app_provider_edit', {'id': provider.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_provider_new') }}">Nouveau</a>
{% endblock %}
