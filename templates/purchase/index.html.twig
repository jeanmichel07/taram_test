{% extends 'app.html.twig' %}

{% block title %}Achat{% endblock %}

{% block body %}
    
        <h3>Achat</h3>
        <div style="width: 100%; text-align: right; margin: 15px 0">
            <a class="btn info" href="{{ path('export_list_purchase_csv') }}">Export en CSV</a>
            <a class="btn primary" href="{{ path('new_purchase') }}">Nouveau</a>
        </div>
        <table class="table">
        <tr>
            <th>Fournisseur</th>
            <th>Prix total d'achats</th>
            <th>Date  d'achat</th>
            <th>Action</th>
        </tr>
        {% for p in purchases %}
            <tr>
                <td>{{ p.provider.name }}</td>
                <td>{{ p.totalAmount }}</td>
                <td>{{ p.createdAt|date('d/m/Y') }}</td>
                <td><a href="{{ path('show_purchase', {id:p.id}) }}" class="">Voir</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4"><i style="color: rgba(0, 0, 1, .5)">Pas de donn√©es !<i/></td>
            </tr>
        {% endfor %}
{% endblock %}
